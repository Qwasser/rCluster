<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MasterNodeApp" x:Class="MasterNodeApp.MainWindow"
        Title="MainWindow" Height="400" Width="864"
        Closing="MainWindow_Closing">
    <Grid Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Width="Auto" BorderBrush="Black" BorderThickness ="2" HorizontalAlignment="Left">
            <ScrollViewer CanContentScroll="False" Height="250" Width="Auto" Margin="5" HorizontalAlignment="Left" BorderBrush="Black">
            
                <StackPanel Orientation="Vertical"
                            Width ="Auto"
                            Name = "HostStackPanel" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Left"
            
                            Margin="5"/>
            
        </ScrollViewer>
        </Border>

    </Grid>
</Window>
